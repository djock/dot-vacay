@model DotVacay.Web.Models.CreateTripViewModel

<div class="container mt-3 mb-3" style="max-width:400px; margin:auto;">
    <form asp-controller="App" asp-action="Index" method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Trip Title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Description" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" placeholder="Start Date" required />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" placeholder="End Date" required />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Create Trip</button>
    </form>
</div>
