@model DotVacay.Web.Models.CreateTripViewModel

<div class="container mt-3 mb-3" style="max-width:400px; margin:auto;">
    <form asp-controller="App" asp-action="Index" method="post">
        <label asp-for="Title" class="form-label">Location</label>
        <div class="form-floating mb-3" >
            <div class="position-relative">
                <input type="text" 
                       id="locationInput" 
                       asp-for="Title"
                       class="form-control" 
                       placeholder="Search for a location..." 
                       autocomplete="off"
                       required />
                <div id="locationDropdown" class="location-dropdown"></div>
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Description" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" placeholder="Start Date" required />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" placeholder="End Date" required />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Latitude" />
        <input type="hidden" asp-for="Longitude" />
        <div class="text-end">
            <button type="submit" class="btn btn-primary">Create Trip</button>
        </div>
    </form>
</div>
