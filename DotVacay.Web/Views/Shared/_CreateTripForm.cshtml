@model DotVacay.Web.Models.CreateTripViewModel

<div class="container mt-5" style="max-width:400px; margin:auto;">
    <h2 class="text-center">Create Trip</h2>
    <form asp-action="Index" method="post" class="mt-4">
        <div class="mb-3">
            <input asp-for="Title" class="form-control" placeholder="Trip Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <textarea asp-for="Description" class="form-control" placeholder="Description" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <input asp-for="StartDate" type="datetime-local" class="form-control" placeholder="Start Date" />
        </div>
        <div class="mb-3">
            <input asp-for="EndDate" type="datetime-local" class="form-control" placeholder="End Date" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Create Trip</button>
    </form>
</div>
